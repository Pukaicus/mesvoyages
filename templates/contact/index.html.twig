{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Contactez-nous</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary mt-3">Envoyer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}